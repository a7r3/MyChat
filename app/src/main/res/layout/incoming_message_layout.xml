<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <include
        android:id="@+id/start_of_day_view"
        layout="@layout/date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/message_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_of_day_view"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/message_profile_picture"
        android:background="@drawable/incoming_card"
        android:elevation="@dimen/cardview_default_elevation"
        android:minWidth="104dp"
        android:padding="8dp">

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_send_layout"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_text_layout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="12:00 AM"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image_send_layout"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/ic_person_black_24dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

    </android.support.constraint.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_picture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/message_bubble"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:background="@drawable/round"
        android:src="@drawable/ic_person_black_24dp" />

</RelativeLayout>