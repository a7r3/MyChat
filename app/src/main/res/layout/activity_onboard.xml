<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C8C8"
    tools:context="vipul.in.mychat.activity.ChatActivity">

    <RelativeLayout
        android:id="@+id/onboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="8dp">

        <ImageView
            android:id="@+id/chatProfilePicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/round"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/chatPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/chatProfilePicture"
            android:includeFontPadding="false"
            android:text="MyChat"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <!-- TODO: Maybe we can use this as an Network Connectivity Indicator -->
        <TextView
            android:id="@+id/chatLastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatPersonName"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/chatProfilePicture"
            android:text="We're connected!"
            android:textColor="#B9B9B9"
            android:textSize="12sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/onboard_message_send_entry"
        android:layout_below="@id/onboard_toolbar"
        android:layout_marginBottom="4dp"
        android:clipChildren="false"
        android:fillViewport="true"
        android:isScrollContainer="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/onboard_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false" />

    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/onboard_message_send_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:padding="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="12">

            <ImageButton
                android:id="@+id/emojiButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="EMOJI"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_insert_emoticon_black_24dp" />

            <!-- Padding = 3dp coz OCD -->
            <com.hbb20.CountryCodePicker
                android:id="@+id/country_code_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:visibility="gone"
                app:ccpDialog_allowSearch="true"
                app:ccpDialog_keyboardAutoPopup="true"
                app:ccpDialog_showNameCode="true"
                app:ccpDialog_showPhoneCode="true"
                app:ccp_autoDetectCountry="true"
                app:ccp_autoFormatNumber="true"
                app:ccp_textSize="14sp" />

            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:id="@+id/editTextEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:background="@android:color/transparent"
                android:hint="Write a message"
                android:padding="8dp"
                android:textSize="18sp"
                emojicon:emojiconSize="28sp" />

            <ImageButton
                android:id="@+id/send_message_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="SEND"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_send_black_24dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
