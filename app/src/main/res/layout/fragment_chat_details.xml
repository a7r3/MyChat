<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:id="@+id/chat_details_profile_picture"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_person_black_24dp"
            android:background="@drawable/round"/>

        <TextView
            android:id="@+id/chat_details_user_name"
            android:layout_toEndOf="@id/chat_details_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some Person"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/chat_details_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/chat_details_profile_picture"
            android:text="Last seen recently"
            android:layout_below="@id/chat_details_user_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

    </RelativeLayout>
</LinearLayout>